<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a242f"
    android:orientation="vertical"
    tools:context="com.example.camilo.prueba0.activitys.GestionCompraActivity">

    <TextView
        android:id="@+id/realTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Presentaciones"
        android:textColor="@android:color/holo_blue_dark"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imagenReal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/descripcionReal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"/>

    <ListView
        android:id="@+id/lvRealizaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#2c3e50"
        android:dividerHeight="4px"/>

</LinearLayout>
